<div class="py-10">
  <header>
    <div class="mx-auto <%= max_width %> px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900"><%= title %></h1>
      <% if subtitle %>
        <p class="mt-2 text-sm text-gray-600"><%= subtitle %></p>
      <% end %>
    </div>
  </header>
  <main>
    <div class="mx-auto <%= max_width %> px-4 py-8 sm:px-6 lg:px-8">
      <%= content %>
    </div>
  </main>
</div>
